{
  "compileOnSave": true,
  "compilerOptions": {
    "experimentalDecorators": true,
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "target": "esnext",
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": "src",
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
  ]
}